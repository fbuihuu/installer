git ls-files \*.py | xargs python2.7 /usr/lib/python2.7/Tools/i18n/pygettext.py -d installer -p po/
git ls-files \*.py | xargs xgettext --language=Python --keyword=_ --output=po/installer.pot --from-code=UTF-8

# creation
msginit --input=installer.pot --locale=fr

# update
msgmerge -o fr.po fr.po installer.pot

# compile en fr.mo
msgfmt -o fr/LC_MESSAGES/installer.mo fr.po
